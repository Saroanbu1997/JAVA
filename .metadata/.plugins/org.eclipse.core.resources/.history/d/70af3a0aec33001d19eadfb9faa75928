package stringprogram;

import java.util.Scanner;

public class Stringscanner {
	public static void main(String[] args)  
	{  
	Scanner sc= new Scanner(System.in); //System.in is a standard input stream  
	System.out.println("Enter a string: ");  
	String str= sc.nextLine();              //reads full string   
	System.out.println("You have entered: "+str);  
	
	System.out.println("---------------");
	System.out.println("Enter a string: ");  
	String str1 = sc.next();  //reads string before the space  //It cannot read two words separated by space. It retains the cursor in the same line after reading the input.
	System.out.println("You have entered: "+str1);
}
}